        <div class="frame-main">
            <h1>Sparks Diary</h1>
            <div class="sparks-container">
            

                <div class="messages-container" style="padding-top: 10%; padding-bottom: 10%;">
                    <% allPosts.forEach((post) => { %> 
                        <div class="post-item" style="border-radius: 50%; background-color: white !important;">
                            <div class="date" style="border-radius: 50%;"> <%= post.date %> </div>
                
                            <div id="inspo-text" style="color: black; font-size: 12px; align-content:center; margin:20px;">
                                <% if (randomInspo) { %>
                                    <p><%= randomInspo.text %></p>
                                <% } else { %>
                                    <p>No inspiration available yet.</p>
                                <% } %>
                            </div>
                
                            <p class="text" style="align-items: center;align-content: center;">  <%= post.text %>   </p>
                            <div class="image">
                            <% if(post.imgUrl) { %>
                                <img src="<%= post.imgUrl %>" style="width:100px;height:auto;border-radius: 10%">
                            <% } %>
                            </div>
                        </div>
                    <% }) %>
                </div>
                
        </div>
    </div>
         <!-- script -->
         <script src="/script.js"></script>

    </body>
</html>
